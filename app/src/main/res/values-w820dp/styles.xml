<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MyAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyAppTheme.AppBarOverlayLight" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for the navigation drawer icon -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00fcfcfc</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="collapsedAppBarTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00ffffff</item>
        <item name="android:text">Condominio</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppBarTextWhite" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/shadowColor</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyEditText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginLeft">12sp</item>
        <item name="android:layout_marginRight">12sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:background">@drawable/fondo_edit_text_no_opaque</item>
    </style>
    <style name="MyTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="MyButtonCustom" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:layout_marginRight">12sp</item>
        <item name="android:background">@drawable/my_custom_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
