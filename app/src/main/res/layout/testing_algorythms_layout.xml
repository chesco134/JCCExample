<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/testing_algorythms_layout_modismo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modismo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/testing_algorythms_layout_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/testing_algorythms_layout_modismo"
        android:layout_marginTop="12sp"
        android:text="@string/testing_algorythms_layout_submit"/>

    <ListView
        android:id="@+id/testing_algorythms_layout_sample_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testing_algorythms_layout_submit"
        android:layout_marginTop="12sp"
        />

</RelativeLayout>