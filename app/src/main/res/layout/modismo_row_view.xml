<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/modismo_row_view_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:id="@+id/modismo_row_view_expresion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/modismo_row_view_number"
        android:layout_toRightOf="@+id/modismo_row_view_number"
        android:layout_marginTop="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/modismo_row_view_significado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/modismo_row_view_expresion"
        android:layout_toEndOf="@+id/modismo_row_view_number"
        android:layout_toRightOf="@+id/modismo_row_view_number"
        android:layout_toStartOf="@+id/modismo_row_view_pais"
        android:layout_toLeftOf="@+id/modismo_row_view_pais"
        android:layout_marginStart="4sp"
        android:layout_marginLeft="4sp"
        android:layout_marginEnd="4sp"
        android:layout_marginRight="4sp"/>
    <TextView
        android:id="@+id/modismo_row_view_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/modismo_row_view_expresion"
        android:textStyle="bold"
        android:layout_marginEnd="4sp"
        android:layout_marginRight="4sp"/>

</RelativeLayout>